namespace EntityBuffer;

struct Vec2{
  x:float;
  y:float;
}

enum BodyType : byte { Player=0, Transparent, Ledge, Solid }

table Transform {
  x:int;
  y:int;
  width:int;
  height:int;
}

table Dynamic {
  width:float;
  height:float;
  pos:Vec2;
  prev_pos:Vec2;
  vel:Vec2;
  accel:Vec2;
}

table Input {
  bitset:uint64;
}

table Player {
  hp:short;
  mana:short;
}

table Entity {
  id:int;
  transform:Transform;
  dynamic:Dynamic;
  input:Input;
  player:Player;
}

root_type Entity;